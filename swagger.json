              "type": "string"
            },
            "applicantName": {
              "type": "string"
            },
            "contactEmail": {
              "type": "string"
            },
            "contactPhone": {
              "type": "string"
            },
            "petId": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "category": {
              "type": "string"
            },
            "age": {
              "type": "integer"
            },
            "color": {
