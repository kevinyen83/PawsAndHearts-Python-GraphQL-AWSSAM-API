            },
            "location": {
              "type": "string"
            },
            "vaccination": {
              "type": "string"
            },
            "availability": {
              "type": "string"
            },
            "image": {
              "type": "string"
            },
            "description": {
              "type": "string"
            }
          }
        },
        "Pet": {
          "type": "object",
          "properties": {
            "petId": {
              "type": "string"
            },
            "organizationName": {
              "type": "string"
            },
            "applicantName": {
              "type": "string"
            },
            "contactEmail": {
